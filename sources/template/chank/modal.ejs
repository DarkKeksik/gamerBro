<div class="modal">
    <div class="modal__wrap">
        <div class="modal__bg"></div>
        <div class="modal__wrapText">
           
            <!-- Панель для разных кнопок, свернуть, закрыть и т.д -->
            <div class="modal__panel">
                <span class="modal__close icon-close" id="modalClose" title="Закрыть"></span>
            </div>
            
            <form class="modal__form_1">
                <p class="modal__title">Начинаем поиск</p>

                <div class="modal__block">
                    <label class="modal__label">
                        <span class="modal__subTitle">Твой ник: </span>
                        <input class="modal__input modal__input_name" autofocus />
                    </label>

                    <label class="modal__label">
                        <span class="modal__subTitle">Игра для поиска: </span>
                        <select class="modal__select">
                            <!-- Выводим все доступные игры -->
                            <% Object.keys(gamesAll).forEach(function(item){ %>
                            <option>
                                <%- item %>
                            </option>
                            <% }); %>
                        </select>
                    </label>

                    <div>
                       
                        <p class="modal__subTitle" style="margin-bottom: 5px;">Ищу:</p>
                        
                        <!-- Выводим кол-во игроков в команде -->
                        <% Object.keys(gamesAll).forEach(function(item){ %>
                        <div class="modal__usersMax" data-game="<%- item %>">
                            <p class="modal__usersMax-item modal__usersMax-item_active" data-amount="<%- gamesAll[item]["maxUsersDefault"] %>" title="Команда из <%- gamesAll[item]["maxUsersDefault"] %> бро">
                                Команду
                                <span class="modal__usersMax-val">на <%- gamesAll[item]["maxUsersDefault"] %> человек</span>
                            </p>

                            <p class="modal__usersMax-item" data-amount="2" title="Поиск напарника">
                                Напарника
                                <span class="modal__usersMax-val">2 человека</span>
                            </p>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <div class="modal__submitWrap">
                    <span class="modal__submit" id="findRoom">Начать поиск</span>
                </div>
            </form>

            <!-- Блок чата -->
            <div class="modal__form_2"></div>
        </div>
    </div>
</div>